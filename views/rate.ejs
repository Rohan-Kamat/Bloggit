<%- include("partials/header.ejs") %>

<div class="container">
    <div class="rating-container">
        <div class="tile-title">
            <h1><%= title %></h1>
        </div>
        <div class="tile-author">
            <%= author %>
        </div>
        <div class="stars">
            <i class="fa-solid fa-star" id="s0"></i>
            <i class="fa-solid fa-star" id="s1"></i>
            <i class="fa-solid fa-star" id="s2"></i>
            <i class="fa-solid fa-star" id="s3"></i>
            <i class="fa-solid fa-star" id="s4"></i>
        </div>
        <div class="buttons-container">
            <form action="/article/<%= blogId %>/rate" method="post">
                <input type="number" name="rating" id="rating" value=0 hidden>
                <input type="submit" value="Rate" class="btn-1">
                <input type="button" value="Cancel" class="btn-2">
            </form>
        </div>
    </div>
</div>

<script src="/js/rate.js"></script>
<script src="https://kit.fontawesome.com/49b78285c5.js" crossorigin="anonymous"></script>

<%- include("partials/footer.ejs") %>