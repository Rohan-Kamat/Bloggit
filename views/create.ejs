<%- include("partials/header.ejs") %>
    <div class="container">
        <div class="form-container">
            <form action="/create" method="post">
                <input type="text" name="title" id="title" value="Article <%= blogId %>">
                <input type="text" name="author" id="author" value="Anonymous">
                <hr>
                <textarea class="content" name="content" placeholder="Content Here"></textarea>
                <div class="buttons-container">
                    <input type="submit" value="Create" class="btn-1">
                    <input type="reset" value="Cancel" class="btn-2">
                </div>
            </form>
        </div>
    </div>
    <dialog>
        <h1>Are you sure you want to cancel?</h1>
        <div class="buttons-container">
            <a href="/blogs"><button class="btn-1">Yes</button></a>
            <button class="btn-2">No</button>
        </div>
    </dialog>

    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
        crossorigin="anonymous"></script>
    <script src="/js/create.js"></script>

<%- include("partials/footer.ejs") %>